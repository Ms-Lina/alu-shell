#!/usr/bin/env bash
# This script displays different messages based on the loop iteration.

# Initialize a counter
counter=1

# Using a while loop to iterate from 1 to 10
while [ $counter -le 10 ]
do
    # Check the current iteration and display the appropriate message
    if [ $counter -eq 4 ]
    then
        echo "bad Luck"
    elif [ $counter -eq 8 ]
    then
        echo "good Luck"
    else
        echo "Best School"
    fi
    
    # Increment the counter
    ((counter++))
done
