#!/usr/bin/env bash
# Attempt to stop the "4-to_infinity_and_beyond" process gracefully.

# Find the PID of the "4-to_infinity_and_beyond" process
pid=$(pgrep -f "4-to_infinity_and_beyond")

if [ -n "$pid" ]; then
  # Send a SIGINT (interrupt) signal to the process
  if kill -SIGINT "$pid"; then
    echo "Sent SIGINT to process '4-to_infinity_and_beyond' with PID $pid"
  else
    echo "Failed to send SIGINT to process '4-to_infinity_and_beyond' with PID $pid"
  fi
else
  echo "Process '4-to_infinity_and_beyond' not found"
fi
