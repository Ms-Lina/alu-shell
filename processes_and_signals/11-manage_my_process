#!/usr/bin/env bash
# Init script to manage the manage_my_process script.
SCRIPT="/path/to/manage_my_process"  # Update with the actual path to manage_my_process script
PIDFILE="/var/run/my_process.pid"
NAME="manage_my_process"

# Function to start the manage_my_process script
do_start() {
    if [ -f "$PIDFILE" ]; then
        echo "$NAME is already running."
    else
        start-stop-daemon --start --background --pidfile "$PIDFILE" --make-pidfile --exec "$SCRIPT" -- start
        echo "$NAME started."
    fi
}

# Function to stop the manage_my_process script
do_stop() {
    if [ -f "$PIDFILE" ]; then
        start-stop-daemon --stop --pidfile "$PIDFILE" --retry 10
        rm -f "$PIDFILE"
        echo "$NAME stopped."
    else
        echo "$NAME is not running."
    fi
}

case "$1" in
    start)
        do_start
        ;;
    stop)
        do_stop
        ;;
    restart)
        do_stop
        sleep 1
        do_start
        echo "$NAME restarted."
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0

