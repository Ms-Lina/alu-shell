#!/usr/bin/env bash
# Stop the '4-to_infinity_and_beyond' process.

# Find the PID of the '4-to_infinity_and_beyond' process
process_name="4-to_infinity_and_beyond"
process_pid=$(pgrep -f "$process_name")

if [ -n "$process_pid" ]; then
  # Use 'kill' to terminate the process
  kill "$process_pid"
  echo "Stopped the '$process_name' process (PID: $process_pid)."
else
  echo "The '$process_name' process is not running."
fi

