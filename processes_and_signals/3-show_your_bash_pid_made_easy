#!/usr/bin/env bash
# Display the PID and process name of processes containing the word "bash."

# Get the PID of the script itself
script_pid=$$

# Use pgrep to find PIDs of processes containing "bash"
bash_pids=$(pgrep -f bash)

# Iterate over each found PID and display the PID and process name
for pid in $bash_pids; do
  # Exclude the PID of this script to avoid self-reference
  if [ "$pid" -ne "$script_pid" ]; then
    process_name=$(tr -d '\0' < "/proc/$pid/cmdline")
    echo "$pid $process_name"
  fi
done
